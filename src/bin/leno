#!/usr/bin/php -f
<?php

/**
 *      namespace class   method
 * leno namespace command [sub-command] [option]
 */
// 框架依赖ROOT常量 the framework rely on the ROOT constant
define ('ROOT', dirname(dirname(dirname(dirname(dirname(__DIR__))))));

// 载入所有依赖
require_once  ROOT . '/vendor/autoload.php';

// 注册名字空间
\Leno\AutoLoader::register('Model', '/model');
\Leno\AutoLoader::register('Controller', '/controller');
\Leno\AutoLoader::register('Shell', '/shell');
\Leno\AutoLoader::instance()->execute();

// 初始化配置器
\Leno\Configure::init();

$commander = new \Leno\Console\Commander;
$commander->execute();
